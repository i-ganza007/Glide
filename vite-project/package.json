{
  "name": "glide-tube-joint-visualizer",
  "private": true,
  "version": "1.0.0",
  "description": "Interactive desktop application for visualizing and manipulating joints between rectangular tubes",
  "author": "Your Name",
  "type": "module",
  "main": "dist-electron/electron.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:start\"",
    "electron:start": "tsc -p tsconfig.electron.json && cp dist-electron/electron.js dist-electron/electron.cjs && rm dist-electron/electron.js && npx electron dist-electron/electron.cjs",
    "electron:pack": "npm run build && npm run electron:build && electron-builder",
    "electron:dist": "npm run build && npm run electron:build && electron-builder --publish=never",
    "electron:build": "tsc -p tsconfig.electron.json && cp dist-electron/electron.js dist-electron/electron.cjs && rm dist-electron/electron.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "@tailwindcss/vite": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "leva": "^0.10.1",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "three": "^0.181.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.glide.tube-joint-visualizer",
    "productName": "Glide Tube Joint Visualizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    }
  }
}
